# 应用基础配置
APP_NAME=CheckinBot
APP_VERSION=1.0.0
APP_ENVIRONMENT=production
APP_DEBUG=false

# Telegram Bot配置
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret

# 管理员配置
ADMIN_USER_IDS=123456789,987654321
SUPER_ADMIN_ID=123456789

# 数据库配置
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:///data/checkin.db
# PostgreSQL示例: postgresql://user:password@localhost/checkin
DATABASE_MAX_CONNECTIONS=10

# Redis配置（可选）
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# 安全配置
SECRET_KEY=your-super-secret-key-here
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-32-byte-encryption-key

# API限制
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60
MAX_ACCOUNTS_PER_USER=50

# 签到配置
DEFAULT_CHECKIN_TIME=08:00
CHECKIN_RETRY_TIMES=3
CHECKIN_TIMEOUT=30
CHECKIN_INTERVAL_MIN=5
CHECKIN_INTERVAL_MAX=15

# 通知配置
# 企业微信
WEWORK_WEBHOOK_URL=
WEWORK_BOT_KEY=

# 钉钉
DINGTALK_WEBHOOK_URL=
DINGTALK_SECRET=

# 飞书
FEISHU_WEBHOOK_URL=
FEISHU_SECRET=

# 邮件
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_USE_TLS=true

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/checkin.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# 代理配置（可选）
HTTP_PROXY=
HTTPS_PROXY=
PROXY_USERNAME=
PROXY_PASSWORD=
