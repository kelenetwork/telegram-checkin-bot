# Telegram Bot 配置
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# 管理员用户ID（多个用逗号分隔）
ADMIN_USER_IDS=123456789,987654321

# 数据库配置
DATABASE_TYPE=sqlite
DATABASE_PATH=data/checkin.db

# PostgreSQL 配置（可选，如果使用PostgreSQL）
# DATABASE_TYPE=postgresql
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=checkin_bot
# DATABASE_USER=checkin_user
# DATABASE_PASSWORD=your_password

# MySQL 配置（可选，如果使用MySQL）
# DATABASE_TYPE=mysql
# DATABASE_HOST=localhost
# DATABASE_PORT=3306
# DATABASE_NAME=checkin_bot
# DATABASE_USER=checkin_user
# DATABASE_PASSWORD=your_password

# Redis 配置（可选，用于缓存）
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# 签到配置
DEFAULT_CHECKIN_TIME=08:00
MAX_ACCOUNTS_PER_USER=10
CHECKIN_TIMEOUT=30
MAX_RETRY_ATTEMPTS=3

# 代理配置（可选）
PROXY_ENABLED=false
PROXY_TYPE=http
PROXY_HOST=127.0.0.1
PROXY_PORT=8080
PROXY_USERNAME=
PROXY_PASSWORD=

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Web 界面配置（可选）
WEB_ENABLED=false
WEB_HOST=0.0.0.0
WEB_PORT=8080
WEB_SECRET_KEY=your_secret_key_here

# 通知配置
NOTIFICATIONS_ENABLED=true
SUCCESS_NOTIFICATIONS=true
FAILURE_NOTIFICATIONS=true
DAILY_REPORT=true
WEEKLY_REPORT=false

# 安全配置
SESSION_TIMEOUT=3600
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=30

# 备份配置
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups/

# 统计配置
STATS_ENABLED=true
STATS_RETENTION_DAYS=365

# 开发模式
DEBUG=false
DEVELOPMENT_MODE=false

# 更新检查
AUTO_UPDATE_CHECK=true
UPDATE_CHANNEL=https://api.github.com/repos/your-repo/releases/latest

# 额外功能
EXPORT_ENABLED=true
IMPORT_ENABLED=true
API_ENABLED=false
API_KEY=your_api_key_here

